<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HappyCart">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        />


    <androidx.cardview.widget.CardView

        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="5dp" android:layout_width="match_parent"
        android:id="@+id/linear"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                    android:text="GermanShephard"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Name"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="GermanShephard"
                    android:layout_width="match_parent"
                    android:textColor="#0A3D62"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:layout_height="wrap_content" android:id="@+id/name1"/>
                <TextView
                    android:text="GermanShephard"
                    android:textColor="#0A3D62"
                    android:layout_width="match_parent"
                    android:padding="2dp"
                    android:layout_height="wrap_content" android:id="@+id/gender1" android:textSize="14sp"
                    />
                <TextView
                    android:text="GermanShephard"
                    android:textColor="#0A3D62"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/breed1" android:textSize="14sp"
                    />
                <TextView
                    android:text="GermanShephard"
                    android:textColor="#0A3D62"
                    android:layout_width="match_parent"
                    android:padding="2dp"
                    android:layout_height="wrap_content" android:id="@+id/district1" android:textSize="14sp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="100pt"
                android:layout_height="114dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/german"
                android:layout_weight="1"
                android:id="@+id/imageView1"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Adoptbtn"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/button_shape"
            android:text="Submit"
            android:onClick="lastActivity"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>