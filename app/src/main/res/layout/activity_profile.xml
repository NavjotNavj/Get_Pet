                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
